<% layout('layouts/boilerplate') %> 
    
  <div class="row">
        <h1 class="text-center" style="color: rgb(151, 9, 9)" >Ajouter Candidature</h1> 
        <div class="col-6 offset-3" >
            <form action="/campgrounds" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="name">Nom et Prénom</label>
                    <input class="form-control" type="text" id="name" name="campground[name]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="mail">Adresse mail</label>
                    <input class="form-control" type="email" id="mail" name="campground[mail]" required>
                    <div class="invalid-feedback">
                        Please enter a valid mail address.
                      </div>
                </div>

            

                <div class="mb-3">
                    <label class="form-label" for="sexe">Sexe</label>
                    <select class="form-select" id="sexe" aria-label="Default select example" name="campground[gender]" required>
                        <option selected>Sélectionner votre sexe</option>
                        <option value="Femme">Femme</option>
                        <option value="Homme">Homme</option>
                        
                    </select>
                    
                </div>

            

                <div class="mb-3">
                    <label class="form-label" for="DN">Date de naissance</label>
                    <input class="form-control" type="date" id="DN" name="campground[dateBirth]" >
                    <div class="invalid-feedback">
                        Please enter a valid date.
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="id">Identifiant Esprit</label>
                    <input class="form-control" type="text" id="id" name="campground[studentID]" required>
                    <div class="invalid-feedback">
                        Please enter a valid ID.
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="moyenne">Moyenne de l'année précedente</label>
                    <input class="form-control" type="number" step="0.01" id="moyenne" name="campground[moy]" required>
                    
                </div>

                

                <div class="mb-3">
                    <button class="btn btn-success">Postuler</button>
                </div>
                    
            </form>
            <a class="btn btn-danger" href="/campgrounds">Annuler</a>
            
        </div>  

  </div>


  