
      <% layout('layouts/boilerplate') %> 
    
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card" style="width: 18rem;">
                
                <div class="card-body">
                  <h5 class="card-title"><%=campground.name%></h5>
                  <p class="card-text"><%=campground.gender%></p>
                  
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%=campground.mail%></li>
                  <li class="list-group-item"><%=campground.dateBirth%></li>
                  <li class="list-group-item"><%=campground.studentID%></li>
                  <li class="list-group-item">Ajout√© par <%=campground.author.username%></li>
                  
                </ul>
                <% if (currentUser && campground.author.equals(currentUser)) { %> 
                <div class="card-body">
                  <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id %>/edit">Modifier</a>
                  <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" >Effacer</button>
                    </form>
                </div>
                <% } %> 
                <div class="card-footer text-muted">
                    <a href="/campgrounds">Retour</a>
                  </div>
              </div>
              
        </div>
    </div>


    
